const express = require("express");
const router = express.Router();
const auth = require("../middleware/authMiddleware");
const { listComments, addComment } = require("../controllers/commentController");

// Liste des commentaires (public)
router.get("/products/:id/comments", listComments);

// Ajout d'un commentaire (user connect√©)
router.post("/products/:id/comments", auth, addComment);

module.exports = router;
